<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/rounded_edittext.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#FEFEFA"
                android:centerColor="#FEFEFA"
                android:endColor="#FEFEFA"
                android:angle="270"
                />
            <stroke
                android:width="1.0dp"
                android:color="#999999" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>