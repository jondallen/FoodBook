<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom = "2dp"
    android:elevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/cardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardImage"
        android:fontFamily="sans-serif"
        android:textSize="22dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:hint="Chicken Parmesan"
        android:textColor="#4d4d4d"
        />

        <TextView
            android:id="@+id/cardUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTitle"
            android:fontFamily="sans-serif-thin"
            android:textSize="13dp"
            android:paddingLeft="4dp"
            android:hint="Submitted by jon2056"
            android:textColor="#000000"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardUsername"
            android:paddingTop="4dp"

            >
            <ImageView
                android:id="@+id/cardPerson"
                android:src="@drawable/ic_people_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"

                />
        <TextView
            android:id="@+id/feedsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="13dp"
            android:hint="4"
            android:textColor="#000000"
            android:layout_toRightOf="@id/cardPerson"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            />

            <ImageView
                android:id="@+id/cardTimer"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_toRightOf="@id/feedsText"
                android:src="@drawable/ic_timer"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/cardTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cardTimer"
                android:fontFamily="sans-serif"
                android:textSize="13dp"
                android:hint="30m"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"
                />

            <TextView
                android:id="@+id/tag1"
                android:layout_below="@id/cardPerson"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="11dp"
                android:textColor="#ffffff"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tag2"
                android:layout_below="@id/cardPerson"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="11dp"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/tag1"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tag3"
                android:layout_below="@id/cardPerson"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="11dp"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/tag2"
                android:layout_marginTop="5dp"
                />

            <ImageView
                android:id="@+id/dotted"
                android:src="@drawable/dotted"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layerType="software"
                android:layout_below="@id/tag1"
                android:layout_marginTop="9dp"
                />

            <com.like.LikeButton
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon_type="star"
                app:circle_start_color="@color/colorPrimary"
                app:like_drawable="@drawable/star_on"
                app:unlike_drawable="@drawable/star_off"
                app:dots_primary_color="@color/colorAccent"
                app:dots_secondary_color="@color/colorPrimary"
                app:circle_end_color="@color/colorAccent"
                app:icon_size="20dp"
                app:liked="false"
                app:anim_scale_factor="2"
                app:is_enabled="true"
                android:layout_below="@id/dotted"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                />
            <com.like.LikeButton
                android:id="@+id/thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon_type="thumb"
                app:circle_start_color="#dae72a"
                app:like_drawable="@drawable/thumb_on"
                app:unlike_drawable="@drawable/thumb_off"
                app:dots_primary_color="#ff9900"
                app:dots_secondary_color="#eda633"
                app:circle_end_color="#edff00"
                app:icon_size="20dp"
                app:liked="false"
                app:anim_scale_factor="2"
                app:is_enabled="true"
                android:layout_below="@id/dotted"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/likesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textSize="14dp"
                android:hint="490"
                android:layout_below="@id/dotted"
                android:layout_toRightOf="@id/thumb"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-3dp"/>

        </RelativeLayout>

