<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom = "2dp"
    android:elevation="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="2dp"
    android:clickable="true"
    >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/cardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardImage"
        android:fontFamily="sans-serif-thin"
        android:textSize="23dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:hint="Chicken Parmesan"
        android:textColor="#000000"
        />

        <TextView
            android:id="@+id/cardUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardTitle"
            android:fontFamily="sans-serif-thin"
            android:textSize="16dp"
            android:paddingLeft="4dp"
            android:hint="Submitted by jon2056"
            android:textColor="#000000"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardUsername"
            android:paddingTop="4dp"

            >
            <ImageView
                android:id="@+id/cardPerson"
                android:src="@drawable/person"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginLeft="3dp"

                />
        <TextView
            android:id="@+id/feedsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textSize="14dp"
            android:hint="4"
            android:textColor="#000000"
            android:layout_toRightOf="@id/cardPerson"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            />

            <ImageView
                android:id="@+id/cardTimer"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_toRightOf="@id/feedsText"
                android:src="@drawable/timer"
                android:layout_marginLeft="3dp"
                />
            <TextView
                android:id="@+id/cardTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cardTimer"
                android:fontFamily="sans-serif-thin"
                android:textSize="14dp"
                android:hint="30 min."
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="3dp"
                />

            <ImageView
                android:id="@+id/thumbImage"
                android:layout_width="22dp"
                android:layout_height="26dp"
                android:src="@drawable/thumb"
                android:layout_toRightOf="@id/cardTime"
                android:layout_marginLeft="3dp"
                />
            
            <TextView
                android:id="@+id/likesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textSize="14dp"
                android:hint="490 points"
                android:layout_toRightOf="@id/thumbImage"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="3dp"
                />
            <com.like.LikeButton
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon_type="star"
                app:circle_start_color="@color/colorPrimary"
                app:like_drawable="@drawable/star_on"
                app:unlike_drawable="@drawable/star_off"
                app:dots_primary_color="@color/colorAccent"
                app:dots_secondary_color="@color/colorPrimary"
                app:circle_end_color="@color/colorAccent"
                app:icon_size="22dp"
                app:liked="false"
                app:anim_scale_factor="2"
                app:is_enabled="true"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />
            <com.like.LikeButton
                android:id="@+id/thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon_type="thumb"
                app:circle_start_color="#dae72a"
                app:like_drawable="@drawable/thumb_on"
                app:unlike_drawable="@drawable/thumb_off"
                app:dots_primary_color="#ff9900"
                app:dots_secondary_color="#eda633"
                app:circle_end_color="#edff00"
                app:icon_size="22dp"
                app:liked="false"
                app:anim_scale_factor="2"
                app:is_enabled="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />



        </RelativeLayout>

