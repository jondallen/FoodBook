<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_test"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uncgcapstone.android.seniorcapstone.DetailedRecipeActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="?attr/homeAsUpIndicator"
        />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/testScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="fill_parent"
                 android:layout_height="240dp"
                  >

        <ImageView
            android:id="@+id/detailImage"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </FrameLayout>

            <TextView
                android:maxLines="1"
                android:fontFamily="sans-serif-bold"
                android:textColor="#4da6ff"
                android:textSize="32dp"
                android:id="@+id/detailRecipeNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_edittext_thick"
                >
                <ImageView
                android:id="@+id/personImageDetail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_people_black_24dp"
                android:layout_alignParentBottom="true"
                />
                <TextView
                    android:id="@+id/servesTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_white"
                    android:layout_toRightOf="@id/personImageDetail"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    />
                <ImageView
                    android:id="@+id/clockImageDetail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/clock"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/servesTextDetail"
                    />
                <TextView
                    android:id="@+id/prepTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_white"
                    android:layout_toRightOf="@id/clockImageDetail"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    />
                <ImageView
                    android:id="@+id/timerImageDetail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/timer"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/prepTextDetail"
                    />
                <TextView
                    android:id="@+id/cookTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_white"
                    android:layout_toRightOf="@id/timerImageDetail"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    />
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_edittext_thick"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            <TextView
                android:id="@+id/ingredientsTitleTextDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="san-serif-bold"
                android:textSize="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                style="?android:listSeparatorTextViewStyle"
                android:text="Ingredients"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ingredsRecyclerViewDetail"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:backgroundTint="#29a329"
                tools:listitem="@layout/ingredients_recyclerview"
                >
            </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_edittext_thick"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/stepsTitleTextDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="san-serif-bold"
                android:textSize="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                style="?android:listSeparatorTextViewStyle"
                android:text="Steps"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/stepsRecyclerViewDetail"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:backgroundTint="#29a329"
                tools:listitem="@layout/steps_recyclerview_numbers"
                >
            </android.support.v7.widget.RecyclerView>
            </LinearLayout>


</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:background="@drawable/rounded_edittext_thicker"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <com.like.LikeButton
            android:id="@+id/starDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon_type="heart"
            app:circle_start_color="@color/colorPrimary"
            app:like_drawable="@drawable/heart_on"
            app:unlike_drawable="@drawable/heart_off"
            app:dots_primary_color="@color/yellow"
            app:dots_secondary_color="@color/colorAccent"
            app:circle_end_color="@color/orange"
            app:icon_size="24dp"
            app:liked="false"
            app:anim_scale_factor="2"
            app:is_enabled="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            />

        <com.like.LikeButton
            android:id="@+id/thumbDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon_type="thumb"
            app:circle_start_color="@color/colorPrimary"
            app:like_drawable="@drawable/thumb_on"
            app:unlike_drawable="@drawable/thumb_off"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/colorPrimaryDark"
            app:circle_end_color="@color/colorAccent"
            app:icon_size="24dp"
            app:liked="false"
            app:anim_scale_factor="2"
            app:is_enabled="true"
            android:layout_toLeftOf="@id/starDetail"
            android:layout_centerVertical="true"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            />

        <Button
            android:id="@+id/commentbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Review This Recipe"
            android:background="@drawable/rounded_edittext_blue"
            android:padding="4dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</LinearLayout>

