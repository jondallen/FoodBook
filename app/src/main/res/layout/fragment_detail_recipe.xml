<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.uncgcapstone.android.seniorcapstone.fragments.DetailRecipeFragment"
    android:background="#f2f2f2"
    >


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/testScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/detailImage"
                android:scaleType="fitXY"
                android:layout_width="fill_parent"
                android:layout_height="240dp"/>

            <TextView
                android:maxLines="1"
                android:fontFamily="sans-serif-bold"
                android:textColor="#4da6ff"
                android:textSize="32dp"
                android:id="@+id/detailRecipeNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="6dp"
                />
            <TextView
                android:id="@+id/detailUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="6dp"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_edittext_thick"
                >
                <ImageView
                    android:id="@+id/personImageDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_people_black_24dp"
                    android:layout_alignParentBottom="true"
                    />
                <TextView
                    android:id="@+id/servesTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_white"
                    android:layout_toRightOf="@id/personImageDetail"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    />
                <ImageView
                    android:id="@+id/clockImageDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/clock"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/servesTextDetail"
                    />
                <TextView
                    android:id="@+id/prepTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_white"
                    android:layout_toRightOf="@id/clockImageDetail"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    />
                <ImageView
                    android:id="@+id/timerImageDetail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/timer"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/prepTextDetail"
                    />
                <TextView
                    android:id="@+id/cookTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_white"
                    android:layout_toRightOf="@id/timerImageDetail"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_edittext_thick"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                >
                <TextView
                    android:id="@+id/ingredientsTitleTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="san-serif-bold"
                    android:textSize="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    style="?android:listSeparatorTextViewStyle"
                    android:text="Ingredients"
                    android:textColor="#4da6ff"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ingredsRecyclerViewDetail"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:backgroundTint="#29a329"
                    tools:listitem="@layout/ingredients_recyclerview"
                    >
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_edittext_thick"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                >
                <TextView
                    android:id="@+id/stepsTitleTextDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="san-serif-bold"
                    android:textSize="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    style="?android:listSeparatorTextViewStyle"
                    android:text="Steps"
                    android:textColor="#4da6ff"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/stepsRecyclerViewDetail"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:backgroundTint="#29a329"
                    tools:listitem="@layout/steps_recyclerview_numbers"
                    >
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
