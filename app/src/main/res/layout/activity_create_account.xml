<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/topkek"
    tools:context="com.uncgcapstone.android.seniorcapstone.activities.LogInActivity"
    android:paddingBottom="50dp"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:id="@+id/logo1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailText1"
        android:hint="Email Address"
        android:layout_below="@id/logo1"
        android:layout_centerHorizontal="true"
        android:padding="5dip"
        android:layout_margin="3dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="sans-serif"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText1"
        android:hint="Password"
        android:layout_below="@id/emailText1"
        android:layout_centerHorizontal="true"
        android:padding="5dip"
        android:layout_margin="3dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="sans-serif"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText2"
        android:hint="Confirm Password"
        android:layout_below="@id/passwordText1"
        android:layout_centerHorizontal="true"
        android:padding="5dip"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="sans-serif"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createButton1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/passwordText2"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="#fc724c"
        android:layout_margin="3dp"
        android:padding="5dip"
        android:ems="10"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelButton"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@id/createButton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="9dp"
        android:padding="5dip"
        android:ems="10"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        />
</RelativeLayout>
